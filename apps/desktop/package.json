{
	"name": "@codedeck/desktop",
	"version": "0.1.1",
	"description": "AI-powered coding assistant desktop app",
	"author": "Codedeck",
	"homepage": "https://github.com/ItsWendell/codedeck",
	"repository": {
		"type": "git",
		"url": "https://github.com/ItsWendell/codedeck.git",
		"directory": "apps/desktop"
	},
	"private": true,
	"type": "module",
	"main": "./out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"dev:web": "vite --config src/renderer/vite.web.config.ts",
		"build": "electron-vite build",
		"preview": "electron-vite preview",
		"package": "electron-builder --config electron-builder.yml --publish never",
		"package:linux": "electron-builder --linux --config electron-builder.yml --publish never",
		"package:mac": "electron-builder --mac --config electron-builder.yml --publish never",
		"package:win": "electron-builder --win --config electron-builder.yml --publish never",
		"package:all": "electron-builder --linux --mac --win --config electron-builder.yml --publish never",
		"lint": "biome check .",
		"check-types": "tsgo --noEmit",
		"clean": "rm -rf out release dist node_modules .turbo"
	},
	"dependencies": {
		"@codedeck/ui": "workspace:*",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource/ibm-plex-mono": "^5.2.7",
		"@opencode-ai/sdk": "^1.1.53",
		"@tanstack/react-query": "^5.90.20",
		"@tanstack/react-router": "^1.158.4",
		"hono": "4.7.10",
		"lucide-react": "^0.563.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-markdown": "^10.1.0",
		"react-resizable-panels": "^4.6.2",
		"react-syntax-highlighter": "^16.1.0",
		"remark-gfm": "^4.0.1",
		"zustand": "^5.0.11"
	},
	"devDependencies": {
		"@codedeck/server": "workspace:*",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22.0.0",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@types/react-syntax-highlighter": "^15.5.13",
		"@vitejs/plugin-react": "^4.3.0",
		"electron": "^40.2.1",
		"electron-builder": "^26.0.0",
		"electron-vite": "^5.0.0",
		"shiki": "^3.22.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.0",
		"vite": "^6.1.0"
	}
}
